@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="row">
    <div class="col-md-4">
        <h1 class="display-4">Guess the price!</h1>
        <form method="post">
            <input type="hidden" asp-for="GuessingPrice.Car.Id" />
            <div class="form-group">
                <label asp-for="GuessingPrice.Car.Make" class="control-label"></label>
                <input asp-for="GuessingPrice.Car.Make" class="form-control" readonly />
                <span asp-validation-for="GuessingPrice.Car.Make" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GuessingPrice.Car.Model" class="control-label"></label>
                <input asp-for="GuessingPrice.Car.Model" class="form-control" readonly />
                <span asp-validation-for="GuessingPrice.Car.Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GuessingPrice.Car.Year" class="control-label"></label>
                <input asp-for="GuessingPrice.Car.Year" class="form-control" readonly />
                <span asp-validation-for="GuessingPrice.Car.Year" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GuessingPrice.Car.Doors" class="control-label"></label>
                <input asp-for="GuessingPrice.Car.Doors" class="form-control" readonly />
                <span asp-validation-for="GuessingPrice.Car.Doors" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GuessingPrice.Car.Color" class="control-label"></label>
                <input asp-for="GuessingPrice.Car.Color" class="form-control" readonly />
                <span asp-validation-for="GuessingPrice.Car.Color" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GuessingPrice.Price" class="control-label"></label>
                <input asp-for="GuessingPrice.Price" class="form-control" type="number" />
            </div>
            <div class="form-group">
                <input type="submit" style="margin-top: 10px" value="Guess" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
